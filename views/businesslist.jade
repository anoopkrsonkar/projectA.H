extends layout

block content
    <div itemscope itemtype="http://schema.org/Restaurant">
    h1. 
     <p itemprop="description">Business List.</p>

       
    ul    

             each business, i in businesslist
               
               p. {business} = business.phone_no

               <p>Phone: <span itemprop="telephone" content=#{business.phone_no}> #{business.phone_no}</span></p>
               p. {business} = business.businessName

               <p>Resaturant: <span itemprop="name" content=#{business.businessName}> #{business.businessName}</span></p>


               form#formAddReview(method="post",action="/addreview")
                    textarea#inputReview(rows="5",type="text", placeholder="Share your experience here",name="review")
                    
                    br 
                    input(id='pd',type='hidden',name='pd',value='#{business._id}')   
                    button#btnSubmit(type="submit") submit 

